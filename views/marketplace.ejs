    <style>
        :root {
            --primary-beige: #F5E6D3;
            --deep-beige: #E8D5B7;
            --rich-brown: #8B4513;
            --dark-brown: #654321;
            --cream: #FFF8DC;
            --terracotta: #B8860B;
            --sage: #9CAF88;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lora', serif;
            background: linear-gradient(135deg, var(--primary-beige) 0%, var(--deep-beige) 100%);
            color: var(--dark-brown);
            overflow-x: hidden;
        }

        /* Dynamic Animated Background Elements */
        .background-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
            overflow: hidden;
        }

        .floating-particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: var(--terracotta);
            border-radius: 50%;
            opacity: 0.4;
            animation: float 20s infinite linear;
        }

        .dust-particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: var(--rich-brown);
            border-radius: 50%;
            opacity: 0.2;
            animation: dustFloat 25s infinite linear;
        }

        .leaf-particle {
            position: absolute;
            width: 8px;
            height: 12px;
            background: var(--sage);
            border-radius: 50% 0 50% 0;
            opacity: 0.3;
            animation: leafFall 30s infinite linear;
        }

        @keyframes float {
            0% { transform: translateY(100vh) translateX(0) rotate(0deg); opacity: 0; }
            10% { opacity: 0.4; }
            90% { opacity: 0.4; }
            100% { transform: translateY(-100px) translateX(50px) rotate(360deg); opacity: 0; }
        }

        @keyframes dustFloat {
            0% { transform: translateY(100vh) translateX(-20px) rotate(0deg); opacity: 0; }
            15% { opacity: 0.2; }
            85% { opacity: 0.2; }
            100% { transform: translateY(-100px) translateX(20px) rotate(180deg); opacity: 0; }
        }

        @keyframes leafFall {
            0% { transform: translateY(-100px) translateX(0) rotate(0deg); opacity: 0; }
            10% { opacity: 0.3; }
            90% { opacity: 0.3; }
            100% { transform: translateY(100vh) translateX(100px) rotate(720deg); opacity: 0; }
        }

        .ethnic-pattern {
            position: absolute;
            width: 150px;
            height: 150px;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50 10 L60 30 L80 30 L66 42 L72 62 L50 50 L28 62 L34 42 L20 30 L40 30 Z" fill="%23B8860B" opacity="0.15"/></svg>');
            animation: drift 25s infinite linear;
        }

        .mandala-pattern {
            position: absolute;
            width: 120px;
            height: 120px;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="%23654321" stroke-width="1" opacity="0.1"/><circle cx="50" cy="50" r="25" fill="none" stroke="%23654321" stroke-width="1" opacity="0.1"/><circle cx="50" cy="50" r="10" fill="none" stroke="%23654321" stroke-width="1" opacity="0.1"/></svg>');
            animation: mandalaRotate 40s infinite linear;
        }

        .paisley-pattern {
            position: absolute;
            width: 80px;
            height: 100px;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M30 80 Q20 60 30 40 Q40 20 60 30 Q80 40 70 60 Q60 80 30 80 Z" fill="%239CAF88" opacity="0.12"/></svg>');
            animation: paisleyDrift 35s infinite linear;
        }

        @keyframes drift {
            0% { transform: translateX(-200px) translateY(0) rotate(0deg); }
            100% { transform: translateX(calc(100vw + 200px)) translateY(-50px) rotate(360deg); }
        }

        @keyframes mandalaRotate {
            0% { transform: translateX(-150px) translateY(0) rotate(0deg) scale(0.8); }
            50% { transform: translateX(50vw) translateY(-30px) rotate(180deg) scale(1.2); }
            100% { transform: translateX(calc(100vw + 150px)) translateY(-60px) rotate(360deg) scale(0.8); }
        }

        @keyframes paisleyDrift {
            0% { transform: translateX(100vw) translateY(0) rotate(0deg); }
            100% { transform: translateX(-200px) translateY(50px) rotate(-360deg); }
        }

        .wave-pattern {
            position: absolute;
            width: 100%;
            height: 100px;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 100"><path d="M0 50 Q100 30 200 50 T400 50" fill="none" stroke="%23F5E6D3" stroke-width="2" opacity="0.3"/></svg>');
            animation: waveFlow 15s infinite linear;
        }

        @keyframes waveFlow {
            0% { transform: translateX(-400px); }
            100% { transform: translateX(400px); }
        }

        .gradient-orb {
            position: absolute;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(184, 134, 11, 0.1) 0%, rgba(184, 134, 11, 0.05) 50%, transparent 70%);
            border-radius: 50%;
            animation: orbFloat 45s infinite ease-in-out;
        }

        @keyframes orbFloat {
            0%, 100% { transform: translateX(0) translateY(0) scale(1); }
            25% { transform: translateX(200px) translateY(-100px) scale(1.2); }
            50% { transform: translateX(100px) translateY(100px) scale(0.8); }
            75% { transform: translateX(-150px) translateY(-50px) scale(1.1); }
        }

        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(245, 230, 211, 0.95);
            backdrop-filter: blur(10px);
            z-index: 1000;
            padding: 1rem 2rem;
            transition: all 0.3s ease;
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--rich-brown);
            text-decoration: none;
            position: relative;
        }

        .logo::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--terracotta);
            transition: width 0.3s ease;
        }

        .logo:hover::after {
            width: 100%;
        }

        .nav-links {
            display: flex;
            flex-wrap: wrap;
            height: auto;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            
            color: var(--dark-brown);
            text-decoration: none;
            font-weight: 400;
            transition: color 0.3s ease;
            position: relative;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 50%;
            width: 0;
            height: 2px;
            background: var(--terracotta);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .nav-links a:hover {
            color: var(--rich-brown);
        }
        .floating-cart {
            position: fixed;
            right: 30px;
            background: var(--sandalwood);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px var(--shadow);
            border: 1px solid var(--sandalwood-dark);
            cursor: pointer;
            transition: all 0.3s;
        }

        .floating-cart:hover {
            background: var(--sandalwood-dark);
            transform: translateY(-3px);
        }

        .cart-icon {
            font-size: 1.5rem;
            color: var(--dark-brown);
        }


        /* Hero Section */
        .hero {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            background: linear-gradient(135deg, var(--primary-beige) 0%, var(--deep-beige) 100%);
        }

        .hero-content {
            max-width: 800px;
            padding: 2rem;
            animation: fadeInUp 1s ease-out;
        }

        .hero h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            font-weight: 600;
            color: var(--rich-brown);
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .hero-tagline {
            font-size: 1.3rem;
            color: var(--dark-brown);
            margin-bottom: 2rem;
            font-style: italic;
            opacity: 0.9;
        }

        .cta-button {
            display: inline-block;
            background: var(--terracotta);
            color: rgb(0, 0, 0);
            padding: 1rem 2rem;
            text-decoration: none;
            font-weight: 500;
            border-radius: 30px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(184, 134, 11, 0.3);
        }

        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(184, 134, 11, 0.4);
            background: var(--rich-brown);
        }

        /* Categories Section */
        .categories {
            padding: 5rem 2rem;
            background: var(--cream);
            position: relative;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            text-align: center;
            color: var(--rich-brown);
            margin-bottom: 3rem;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            width: 80px;
            height: 3px;
            background: var(--terracotta);
            transform: translateX(-50%);
        }

        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .category-card {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid transparent;
        }

        .category-card:hover {
            transform: translateY(-10px) rotateX(5deg);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            border-color: var(--terracotta);
        }

        .category-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--terracotta);
        }

        .category-card h3 {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--rich-brown);
            margin-bottom: 1rem;
        }

        .category-card p {
            color: var(--dark-brown);
            opacity: 0.8;
        }

        /* Featured Section */
        .featured {
            padding: 5rem 2rem;
            background: var(--primary-beige);
        }

        .featured-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        .product-image {
            width: 100%;
            height: 200px;
            background: linear-gradient(45deg, var(--terracotta), var(--sage));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
        }

        .product-info {
            padding: 1.5rem;
        }

        .product-info h4 {
            font-family: 'Playfair Display', serif;
            font-size: 1.3rem;
            color: white;
            margin-bottom: 0.5rem;
        }

        .artist-name {
            color: white;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .price {
            font-weight: 600;
            color: white;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .view-button {
            display: inline-block;
            background: var(--terracotta);
            color: white;
            padding: 0.5rem 1.5rem;
            text-decoration: none;
            border-radius: 20px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .view-button:hover {
            background: var(--rich-brown);
            transform: translateY(-2px);
        }

        /* Testimonials */
        .testimonials {
            padding: 5rem 2rem;
            background: var(--deep-beige);
            position: relative;
        }

        .testimonials-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .testimonial-card {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
            position: relative;
        }

        .testimonial-card::before {
            content: '"';
            position: absolute;
            top: -10px;
            left: 20px;
            font-size: 4rem;
            color: var(--terracotta);
            font-family: 'Playfair Display', serif;
        }

        .testimonial-text {
            font-style: italic;
            margin-bottom: 1rem;
            color: var(--dark-brown);
        }

        .testimonial-author {
            font-weight: 600;
            color: var(--rich-brown);
        }

        /* Footer */
