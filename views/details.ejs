                    </div>
                </div>
                
                <div class="product-card">
                    <div class="product-image" style="background: #f8f3ea;"></div>
                    <div class="product-details">
                        <h3 class="product-card-title">Blue Pottery Vase</h3>
                        <div class="product-price">₹6,799</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-logo">RangRiti</div>
            <p class="footer-tagline">Preserving India's artistic heritage by connecting master artisans with appreciative patrons worldwide.</p>
            <p>© 2023 RangRiti. All rights reserved.</p>
        </div>
    </footer>
    
    <script>
        // Simple image gallery functionality
        document.querySelectorAll('.thumbnail').forEach(thumb => {
            thumb.addEventListener('click', function() {
                // Remove active class from all thumbnails
                document.querySelectorAll('.thumbnail').forEach(t => {
                    t.classList.remove('active');
                });
                
                // Add active class to clicked thumbnail
                this.classList.add('active');
                
                // In a real implementation, this would update the main image
            });
        });
        
        // Add to cart and buy now buttons
