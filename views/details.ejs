                <i class="fas fa-arrow-left"></i> Back to Marketplace
            </button>
        </div>
    </header>
    
    <div class="container">
        <!-- Product Details Section -->
        <div class="product-container">
            <!-- Decorative Elements -->
            <div class="mandala-border mandala-1"></div>
            <div class="paisley"></div>
            
            <!-- Product Gallery -->
            <div class="gallery">
                <div class="main-image">
                    <i class="fas fa-image" style="font-size: 4rem; color: rgba(139, 0, 0, 0.1);"></i>
                </div>
                <div class="thumbnails">
                    <img src="#" alt="Thumbnail 1" class="thumbnail active">
                    <img src="#" alt="Thumbnail 2" class="thumbnail">
                    <img src="#" alt="Thumbnail 3" class="thumbnail">
                    <img src="#" alt="Thumbnail 4" class="thumbnail">
                </div>
            </div>
            
            <!-- Product Information -->
            <div class="product-info">
                <div class="product-category">Handloom</div>
                <h1 class="product-title">Banarasi Silk Saree</h1>
                
                <div class="artist">
                    <i class="fas fa-user"></i>
                    <span>Created by: Meera Devi</span>
                </div>
                
                <div class="rating">
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                    <div class="reviews">(142 reviews)</div>
                </div>
                
                <div class="price">₹12,499</div>
                
                <div class="availability">
                    <i class="fas fa-check-circle"></i>
                    <span class="in-stock">In Stock (8 available)</span>
                </div>
                
                <div class="product-meta">
                    <div class="meta-item">
                        <span class="meta-label">Material:</span>
                        <span>Pure Silk with Zari Work</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Size:</span>
                        <span>6.5 Yards (Standard)</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Region:</span>
                        <span>Varanasi, Uttar Pradesh</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Created:</span>
                        <span>March 15, 2023</span>
                    </div>
                </div>
                
                <div class="tags">
