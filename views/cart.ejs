        <p class="header-subtext">Curated by artisans. Cherished by you.</p>
        <div class="divider"></div>
    </header>

    <div class="container">
        <section class="cart-items">
            <% if (cartItems.length === 0) { %>
                <div class="empty-cart">
                    <h2>Your Cart is Empty</h2>
                    <p>Discover beautiful handcrafted treasures waiting for you</p>
                    <a href="/catalogue" class="btn btn-continue">
                        <i class="fas fa-search"></i> Explore Collection
                    </a>
                </div>
            <% } else { %>
                <% cartItems.forEach(item => { %>
                    <div class="cart-item" data-product-id="<%= item.productId %>">
                        <div class="item-image">
                            <img src="<%= item.image %>" alt="<%= item.name %>">
                        </div>
                        <div class="item-details">
                            <h3 class="item-name"><%= item.name %></h3>
                            <p class="artist-name">by <%= item.artistName %></p>
                            <div class="quantity-control">
                                <button class="qty-btn minus">−</button>
                                <input type="number" class="qty-input" value="<%= item.quantity %>" min="1">
                                <button class="qty-btn plus">+</button>
                            </div>
                            <div class="item-price" data-unit-price="<%= item.price %>">₹<%= item.price * item.quantity %></div>
                            <div class="loyalty-coins">
                                <i class="fas fa-coins"></i> Earn ₹<%= Math.round(item.price * item.quantity * 0.1) %> RangRiti Rewards
                            </div>
                        </div>
                        <button class="remove-btn">✕</button>
                    </div>
                <% }); %>
            <% } %>
        </section>

        <% if (cartItems.length > 0) { %>
        <section class="summary">
            <h2 class="summary-title">Order Summary</h2>

            <div class="summary-item">
                <span>Subtotal (<%= cartItems.reduce((sum, item) => sum + item.quantity, 0) %> items)</span>
                <span>₹<%= subtotal %></span>
            </div>

            <div class="summary-item">
                <span>Shipping</span>
                <span><%= shipping === 0 ? 'Free' : `₹${shipping}` %></span>
            </div>

            <div class="summary-item">
                <span>Taxes</span>
                <span>₹<%= tax %></span>
            </div>

            <div class="summary-item summary-total">
                <span>Total</span>
                <span>₹<%= total %></span>
            </div>

            <div class="gift-wrap">
                <input type="checkbox" id="gift-wrap" name="giftWrap">
                <label for="gift-wrap">Add Traditional Gift Wrap</label>
                <i class="fas fa-gift"></i>
            </div>

            <div class="note-to-artist">
                <label for="artist-note">Note to Artisan (optional):</label>
                <textarea id="artist-note" name="noteToArtist" placeholder="Write a personal message for the artisan..."></textarea>
            </div>

            <div class="cta-buttons">
                <button class="btn btn-continue" onclick="updateCartAndContinue()">
                    <i class="fas fa-arrow-left"></i> Continue Shopping
                </button>

                <% if (cartItems && cartItems.length > 0) { %>
                    <form action="/buy-now/<%= cartItems[0].productId %>" method="POST">
                        <button type="submit" class="btn btn-checkout">
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </button>
                    </form>
                <% } %>
            </div>
        </section>
        <% } %>
    </div>

    <footer>
        <p>© 2024 RangRiti Bazaar - Preserving Heritage, Empowering Artisans</p>
        <p>Every purchase supports traditional Indian craftsmanship</p>
    </footer>

    <!-- Your existing JavaScript remains the same -->
    <script>
        // Enhanced floating particles
        function createParticles() {
            const container = document.body;
            const particleCount = 12;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');

                const size = Math.floor(Math.random() * 6) + 3;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.top = `${Math.random() * 100}%`;
                particle.style.left = `${Math.random() * 100}%`;

                const delay = Math.random() * 20;
                const duration = 15 + Math.random() * 15;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;

                container.appendChild(particle);
            }
        }

        createParticles();

        // Your existing cart functionality...
        document.addEventListener('DOMContentLoaded', () => {
            const cartSection = document.querySelector('.cart-items');

            cartSection.addEventListener('click', async (e) => {
                const isPlus = e.target.classList.contains('plus');
                const isMinus = e.target.classList.contains('minus');
                const isRemove = e.target.classList.contains('remove-btn');

                if (!isPlus && !isMinus && !isRemove) return;

                const cartItem = e.target.closest('.cart-item');
                const input = cartItem.querySelector('.qty-input');
                const productId = cartItem.dataset.productId;

                let quantity = parseInt(input.value);

                if (isPlus) quantity += 1;
                else if (isMinus) quantity -= 1;
                else if (isRemove) quantity = 0;

                quantity = Math.max(0, quantity);

                try {
                    const response = await fetch('/cart/update', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId, quantity })
                    });

                    const data = await response.json();
                    if (data.success) {
                        if (quantity === 0) {
                            cartItem.style.animation = 'fadeOut 0.5s ease-out';
                            setTimeout(() => cartItem.remove(), 500);
                        } else {
                            input.value = quantity;
                            cartItem.querySelector('.item-price').textContent = `₹${data.updatedItem.total}`;
                            cartItem.querySelector('.loyalty-coins').innerHTML = `<i class="fas fa-coins"></i> Earn ₹${data.updatedItem.rewards} RangRiti Rewards`;
                        }

                        updateSummary(data);
                    } else {
                        alert('Error updating cart. Try again.');
                    }
                } catch (err) {
                    console.error('AJAX error:', err);
                }
            });

            function updateSummary(data) {
                document.querySelector('.summary-item:nth-child(2) span:last-child').textContent = `₹${data.subtotal}`;

                const shippingElem = document.querySelector('.summary-item:nth-child(3) span:last-child');
                shippingElem.textContent = (data.totalItems === 0 || data.shipping === 0) ? 'Free' : `₹${data.shipping}`;

                document.querySelector('.summary-item:nth-child(4) span:last-child').textContent = `₹${data.tax}`;
                document.querySelector('.summary-item.summary-total span:last-child').textContent = `₹${data.total}`;
                document.querySelector('.summary-item:nth-child(2) span:first-child').textContent = `Subtotal (${data.totalItems} items)`;
            }
        });

        function updateCartAndContinue() {
            window.location.href = '/catalogue';
        }
    </script>

    <!-- Include navbar script -->
  

    <!-- Add fadeOut animation -->
    <style>
        @keyframes fadeOut {
            from { opacity: 1; transform: translateY(0); }
            to { opacity: 0; transform: translateY(20px); }
        }
    </style>
</body>

</html>