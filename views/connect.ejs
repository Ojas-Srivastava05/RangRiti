    <script>
        // Star rating functionality - Enhanced
        const ratingInputs = document.querySelectorAll('.rating input[type="radio"]');
        const stars = document.querySelectorAll('.rating i');
        
        ratingInputs.forEach((input, index) => {
            input.addEventListener('change', function() {
                const value = parseInt(this.value);
                
                // Reset all stars
                stars.forEach(star => {
                    star.classList.remove('fas', 'active');
                    star.classList.add('far');
                });
                
                // Fill stars up to the selected value
                for (let i = 0; i < value; i++) {
                    stars[i].classList.remove('far');
                    stars[i].classList.add('fas', 'active');
                }
            });
        });

        // Star hover effect
        stars.forEach((star, index) => {
            star.addEventListener('mouseenter', function() {
                // Highlight stars up to the hovered one
                for (let i = 0; i <= index; i++) {
                    stars[i].classList.remove('far');
                    stars[i].classList.add('fas');
                }
            });
        });

        // Reset stars on mouse leave (unless one is selected)
        document.querySelector('.rating').addEventListener('mouseleave', function() {
            const selectedInput = document.querySelector('.rating input[type="radio"]:checked');
            const selectedValue = selectedInput ? parseInt(selectedInput.value) : 0;
            
            stars.forEach((star, index) => {
                if (index < selectedValue) {
                    star.classList.remove('far');
                    star.classList.add('fas', 'active');
                } else {
                    star.classList.remove('fas', 'active');
                    star.classList.add('far');
                }
            });
        });

        // FAQ accordion functionality - Enhanced
        const faqQuestions = document.querySelectorAll('.faq-question');
        faqQuestions.forEach(question => {
            question.addEventListener('click', function() {
                const answer = this.nextElementSibling;
                const icon = this.querySelector('i');
                
                // Close other open FAQs
                faqQuestions.forEach(otherQuestion => {
                    if (otherQuestion !== question) {
                        const otherAnswer = otherQuestion.nextElementSibling;
                        const otherIcon = otherQuestion.querySelector('i');
                        otherAnswer.classList.remove('show');
                        otherIcon.style.transform = 'rotate(0deg)';
                    }
                });
                
                // Toggle the current FAQ
                answer.classList.toggle('show');
                
                // Rotate the icon
                if (answer.classList.contains('show')) {
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    icon.style.transform = 'rotate(0deg)';
                }
            });
        });

        // Enhanced form validation and submission
        const forms = document.querySelectorAll('form');
        forms.forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.style.borderColor = '#e74c3c';
                        field.style.boxShadow = '0 0 0 3px rgba(231, 76, 60, 0.2)';
                    } else {
                        field.style.borderColor = 'var(--royal-gold)';
                        field.style.boxShadow = '0 0 0 3px rgba(218, 165, 32, 0.2)';
                    }
                });
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                }
            });
        });

        // Social media links hover effect enhancement
        const socialIcons = document.querySelectorAll('.social-icon');
        socialIcons.forEach(icon => {
            icon.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) rotate(10deg) scale(1.1)';
            });
            
            icon.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) rotate(0deg) scale(1)';
            });
        });
    </script>
