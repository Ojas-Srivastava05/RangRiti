                        <a href="?page=<%= currentPage - 1 %>" class="page-button"><i
                                class="fas fa-chevron-left"></i></a>
                        <% } %>

                            <% for (let i=1; i <=totalPages; i++) { %>
                                <% if (i===currentPage) { %>
                                    <div class="page-button active">
                                        <%= i %>
                                    </div>
                                    <% } else { %>
                                        <a href="?page=<%= i %>" class="page-button">
                                            <%= i %>
                                        </a>
                                        <% } %>
                                            <% } %>

                                                <% if (currentPage < totalPages) { %>
                                                    <a href="?page=<%= currentPage + 1 %>" class="page-button"><i
                                                            class="fas fa-chevron-right"></i></a>
                                                    <% } %>
                </div>

        </div>
    </main>



    <script>
        // Create floating particles
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.body;
            const particleCount = 15;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');

                // Random size between 3px and 8px
                const size = Math.floor(Math.random() * 6) + 3;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;

                // Random position
                particle.style.top = `${Math.random() * 100}%`;
                particle.style.left = `${Math.random() * 100}%`;

                // Random animation delay and duration
                const delay = Math.random() * 15;
                const duration = 15 + Math.random() * 15;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;

                container.appendChild(particle);
            }

            // Accordion functionality for filters
            const filterHeaders = document.querySelectorAll('.filter-section h3');
            filterHeaders.forEach(header => {
                header.addEventListener('click', () => {
                    const icon = header.querySelector('i');
                    icon.classList.toggle('fa-chevron-down');
                    icon.classList.toggle('fa-chevron-up');
                });
            });
        });
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', async () => {
                const productId = button.dataset.productId;
                try {
                    const res = await fetch('/cart/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })
                    });

                    const data = await res.json();
                    if (res.ok) {
                        alert('Added to cart!');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                } catch (err) {
                    alert('Something went wrong');
                }
            });
        });
        async function addToCart(productId) {
            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId })
                });

                const data = await response.json();

                if (response.status === 401) {
                    alert(data.message || 'Please log in first.');
                    window.location.href = '/login.html'; // redirect to login
                } else if (response.ok) {
                    alert('Item added to cart!');
                } else {
                    alert(data.message || 'Something went wrong.');
                }

            } catch (error) {
                console.error('Add to cart failed:', error);
                alert('An error occurred. Please try again.');
            }
        }

        fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId }),
            credentials: 'include' // âœ… required for session to work
        });


    </script>
