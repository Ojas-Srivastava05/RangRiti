    </nav>

    <!-- Enhanced floating particles -->
    <div class="particle" style="width: 8px; height: 8px; top: 10%; left: 15%; animation-delay: 0s;"></div>
    <div class="particle" style="width: 5px; height: 5px; top: 25%; left: 70%; animation-delay: 3s;"></div>
    <div class="particle" style="width: 6px; height: 6px; top: 65%; left: 40%; animation-delay: 6s;"></div>
    <div class="particle" style="width: 7px; height: 7px; top: 45%; left: 85%; animation-delay: 9s;"></div>
    <div class="particle" style="width: 4px; height: 4px; top: 75%; left: 20%; animation-delay: 12s;"></div>
    <div class="particle" style="width: 9px; height: 9px; top: 15%; left: 50%; animation-delay: 15s;"></div>

    <!-- Header with enhanced styling -->
    <header>
        <div class="header-content">
            <h1 class="page-title">Artistry Collection</h1>
            <p class="subtitle">Timeless Craftsmanship</p>
            <div class="breadcrumbs">
                <a href="/marketplace">Home</a>
                <span>â€¢</span>
                <span>Catalogue</span>
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main>
        <div class="container">
            <!-- Filter sidebar -->
            <aside class="filter-sidebar">
                <form method="GET" action="/catalogue">
                    <h2 class="filter-title">Filters <i class="fas fa-sliders-h"></i></h2>

                    <!-- Type Filter -->
                    <div class="filter-section">
                        <h3>Type <i class="fas fa-chevron-down"></i></h3>
                        <div class="filter-options">
                            <div class="filter-option">
                                <input type="checkbox" name="category" value="Painting" id="paintings">
                                <label for="paintings">Paintings</label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="category" value="Pottery" id="pottery">
                                <label for="pottery">Pottery</label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="category" value="Sculpture" id="sculpture">
                                <label for="sculpture">Sculpture</label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="category" value="Handloom" id="handloom">
                                <label for="handloom">Handloom</label>
                            </div>
                            <div class="filter-option">
                                <input type="checkbox" name="category" value="Woodcraft" id="woodcraft">
                                <label for="woodcraft">Woodcraft</label>
                            </div>
                        </div>
                    </div>

                    <!-- Price Range -->
                    <div class="filter-section">
                        <h3>Price Range <i class="fas fa-chevron-down"></i></h3>
                        <label>Min: â‚¹<input type="number" name="minPrice" min="0" placeholder="0"></label>
                        <label>Max: â‚¹<input type="number" name="maxPrice" min="0" placeholder="10000"></label>
                    </div>

                    <!-- Rating -->
                    <div class="filter-section">
                        <h3>Rating <i class="fas fa-chevron-down"></i></h3>
                        <div class="filter-options">
                            <div class="filter-option">
                                <input type="radio" name="minRating" value="5" id="rating5">
                                <label for="rating5">â˜…â˜…â˜…â˜…â˜…</label>
                            </div>
                            <div class="filter-option">
                                <input type="radio" name="minRating" value="4" id="rating4">
                                <label for="rating4">â˜…â˜…â˜…â˜…â˜† & above</label>
                            </div>
                            <div class="filter-option">
                                <input type="radio" name="minRating" value="3" id="rating3">
                                <label for="rating3">â˜…â˜…â˜…â˜†â˜† & above</label>
                            </div>
                        </div>
                    </div>

                    <!-- Artist -->
                    <div class="filter-section">
                        <h3>Artist <i class="fas fa-chevron-down"></i></h3>
                        <div class="filter-options">
                            <% artists.forEach((a, index)=> {
                                const isChecked = selectedArtists.includes(a.artistName);
                                %>
                                <div class="filter-option">
                                    <input type="checkbox" name="artist" value="<%= a.artistName %>"
                                        id="artist<%= index %>" <%=isChecked ? 'checked' : '' %>
                                    >
                                    <label for="artist<%= index %>">
                                        <%= a.artistName %>
                                    </label>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <!-- Availability -->
                    <div class="filter-section">
                        <h3>Availability <i class="fas fa-chevron-down"></i></h3>
                        <div class="filter-options">
                            <div class="filter-option">
                                <input type="radio" name="availability" value="inStock" id="instock">
                                <label for="instock">In Stock</label>
                            </div>
                            <div class="filter-option">
                                <input type="radio" name="availability" value="preorder" id="preorder">
                                <label for="preorder">Pre-order</label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="filter-section">
                        <button type="submit" class="apply-filters-button">Apply Filters</button>
                    </div>
                </form>
            </aside>

            <!-- Catalogue main area -->
            <main class="catalogue-main">
                <div class="sorting-bar">
                    <div class="sorting-options">
                        <label for="sort">Sort by:</label>
                        <select id="sort" class="sort-select">
                            <option>Newest</option>
                            <option>Price: Low to High</option>
                            <option selected>Price: High to Low</option>
                            <option>Rating</option>
                        </select>
                    </div>
                    <div class="results-count">
                        Showing <%= showingCount %> of <%= totalProducts %> products
                    </div>
                </div>

                <div class="product-grid">
                    <% products.forEach(product=> { %>
                        <div class="product-card">
                            <% if (product.isNew) { %>
                                <div class="product-badge">New</div>
                                <% } %>

                                    <div class="product-image">
                                        <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                                    </div>

                                    <div class="product-info">
                                        <h3 class="product-title">
                                            <%= product.name %>
                                        </h3>
                                        <div class="product-artist">by <%= product.artistName %>
                                        </div>
                                        <div class="product-price">â‚¹<%= product.price %>
                                        </div>
                                        <div class="product-rating">
                                            <div class="rating-stars">
                                                <% for (let i=0; i < 5; i++) { %>
                                                    <% if (i < Math.floor(product.rating)) { %>
                                                        <i class="fas fa-star"></i>
                                                        <% } else if (i < product.rating) { %>
                                                            <i class="fas fa-star-half-alt"></i>
                                                            <% } else { %>
                                                                <i class="far fa-star"></i>
                                                                <% } %>
                                                                    <% } %>
                                            </div>
                                            <div class="rating-value">
                                                <%= product.rating %> (<%= product.reviewsCount %>)
                                            </div>
                                        </div>
                                        <div class="product-actions">
