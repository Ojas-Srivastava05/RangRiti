    <style>
        /*
        =================================================================
        RangRiti Artist Dashboard Styling
        Version: 1.0
        Date: 9 July 2025
        Description: A comprehensive artist dashboard matching the 
                     sandalwood beige theme of the registration page.
        =================================================================
        */

        /* Root variables for consistent theming */
        :root {
            /* Color Palette based on Sandalwood Beige */
            --color-sandalwood-beige: #F5DEB3;
            --color-sandalwood-light: #FFF8E7;
            --color-sandalwood-dark: #D2B48C;
            --color-earth-brown: #8B4513;
            --color-dark-brown: #5D4037;
            --color-gold-accent: #B8860B;
            --color-gold-gradient-start: #D4AF37;
            --color-gold-gradient-end: #B8860B;
            --color-text-primary: #4a2c0f;
            --color-text-secondary: #a0522d;
            --color-shadow-primary: rgba(0, 0, 0, 0.15);
            --color-shadow-secondary: rgba(139, 69, 19, 0.2);
            --color-backdrop: rgba(253, 245, 230, 0.8);
            --color-card-bg: rgba(255, 248, 231, 0.9);

            /* Typography */
            --font-primary: 'Lora', serif;
            --font-display: 'Playfair Display', serif;

            /* Transitions & Animations */
            --transition-speed-fast: 0.2s;
            --transition-speed-medium: 0.4s;
            --transition-speed-slow: 0.6s;
            --easing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        /* Google Fonts Import */
        @import url('https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,600;1,400&family=Playfair+Display:wght@700&display=swap');

        /* General Reset and Box Sizing */
        *,
        *::before,
        *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: var(--font-primary);
            color: var(--color-text-primary);
            background-color: var(--color-sandalwood-beige);
            min-height: 100vh;
            width: 100%;
            position: relative;
            overflow-x: hidden;
        }

        /* Back to Home Button */
        .back-home-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            background: linear-gradient(135deg, var(--color-earth-brown), var(--color-dark-brown));
            color: var(--color-sandalwood-light);
            padding: 12px 20px;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            z-index: 1001;
            box-shadow: 0 6px 20px var(--color-shadow-primary);
            transition: all var(--transition-speed-medium) var(--easing-function);
            font-family: var(--font-primary);
        }

        .back-home-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px var(--color-shadow-secondary);
            background: linear-gradient(135deg, var(--color-dark-brown), var(--color-earth-brown));
        }

        .back-home-btn::before {
            content: '‚Üê';
            font-size: 18px;
            font-weight: bold;
        }

        /* Animated Gradient Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, var(--color-sandalwood-beige), #d8b88e, #b98a56, #8b5e34);
            background-size: 400% 400%;
            animation: gradientBG 20s ease infinite;
            z-index: -3;
        }

        @keyframes gradientBG {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Subtle Texture Overlay */
        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');
            opacity: 0.04;
            z-index: -2;
            pointer-events: none;
        }

        /* Floating Particle Effect */
        .particle-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            background-color: var(--color-gold-accent);
            border-radius: 50%;
            opacity: 0;
            animation: float 25s infinite linear;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) scale(0);
                opacity: 0.5;
            }

            100% {
                transform: translateY(-10vh) scale(1);
                opacity: 0;
            }
        }

        /* Particle styling */
        .particle:nth-child(1) {
            left: 5%;
            animation-duration: 22s;
            animation-delay: -2s;
            width: 8px;
            height: 8px;
        }

        .particle:nth-child(2) {
            left: 15%;
            animation-duration: 18s;
            animation-delay: -15s;
            width: 5px;
            height: 5px;
        }

        .particle:nth-child(3) {
            left: 22%;
            animation-duration: 28s;
            animation-delay: -7s;
            width: 10px;
            height: 10px;
        }

        .particle:nth-child(4) {
            left: 33%;
            animation-duration: 15s;
            animation-delay: -22s;
            width: 6px;
            height: 6px;
        }

        .particle:nth-child(5) {
            left: 45%;
            animation-duration: 25s;
            animation-delay: -1s;
            width: 8px;
            height: 8px;
        }

        .particle:nth-child(6) {
            left: 51%;
            animation-duration: 19s;
            animation-delay: -18s;
            width: 4px;
            height: 4px;
        }

        .particle:nth-child(7) {
            left: 63%;
            animation-duration: 26s;
            animation-delay: -4s;
            width: 9px;
            height: 9px;
        }

        .particle:nth-child(8) {
            left: 72%;
            animation-duration: 17s;
            animation-delay: -25s;
            width: 5px;
            height: 5px;
        }

        .particle:nth-child(9) {
            left: 85%;
            animation-duration: 23s;
            animation-delay: -11s;
            width: 7px;
            height: 7px;
        }

        .particle:nth-child(10) {
            left: 95%;
            animation-duration: 20s;
            animation-delay: -9s;
            width: 6px;
            height: 6px;
        }

        /* Header */
        .header {
            background: var(--color-backdrop);
            backdrop-filter: blur(15px) saturate(150%);
            -webkit-backdrop-filter: blur(15px) saturate(150%);
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-bottom: 3px solid;
            border-image: linear-gradient(to right, var(--color-gold-gradient-start), var(--color-gold-gradient-end)) 1;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-family: var(--font-display);
            color: var(--color-earth-brown);
            font-size: 2.5em;
            text-shadow: 2px 2px 5px var(--color-shadow-primary);
            letter-spacing: 1px;
        }

        .header-subtitle {
            color: var(--color-text-secondary);
            font-size: 1.1em;
            font-style: italic;
            margin-top: 0.5rem;
        }

        .logout-btn {
            padding: 0.8rem 1.5rem;
            background: linear-gradient(145deg, var(--color-earth-brown), #a0522d);
            color: var(--color-sandalwood-light);
            border: none;
            border-radius: 8px;
            font-family: var(--font-primary);
            font-weight: 600;
            cursor: pointer;
            transition: all var(--transition-speed-medium) var(--easing-function);
            text-decoration: none;
            display: inline-block;
        }

        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px var(--color-shadow-secondary);
        }

        /* Main Container */
        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem 3rem;
            position: relative;
            z-index: 1;
        }

        /* Dashboard Grid */
        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        /* Profile Card */
        .profile-card {
            background: var(--color-card-bg);
            backdrop-filter: blur(10px) saturate(150%);
            -webkit-backdrop-filter: blur(10px) saturate(150%);
            padding: 2rem;
            border-radius: 15px;
            border: 2px solid;
            border-image: linear-gradient(to bottom right, var(--color-gold-gradient-start), var(--color-gold-gradient-end)) 1;
            box-shadow: 0 15px 35px var(--color-shadow-primary);
            animation: card-fade-in 0.8s var(--easing-function) forwards;
            opacity: 0;
            transform: translateY(20px);
            height: fit-content;
        }

        @keyframes card-fade-in {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 4px solid var(--color-gold-accent);
            object-fit: cover;
            margin: 0 auto 1.5rem;
            display: block;
            box-shadow: 0 8px 20px var(--color-shadow-primary);
        }

        .profile-name {
            font-family: var(--font-display);
            font-size: 1.8em;
            color: var(--color-earth-brown);
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .profile-artform {
            text-align: center;
            color: var(--color-text-secondary);
            font-size: 1.1em;
            font-weight: 600;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .profile-location {
            text-align: center;
            color: var(--color-text-primary);
            font-size: 1em;
            margin-bottom: 1.5rem;
        }

        .profile-location::before {
            content: "üìç ";
            margin-right: 0.5rem;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .social-link {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            background: linear-gradient(145deg, var(--color-gold-gradient-start), var(--color-gold-gradient-end));
            color: white;
            border-radius: 50%;
            text-decoration: none;
            font-size: 1.2em;
            transition: all var(--transition-speed-medium) var(--easing-function);
            box-shadow: 0 4px 10px var(--color-shadow-primary);
        }

        .social-link:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 8px 20px var(--color-shadow-secondary);
        }

        /* Bio Section */
        .bio-section {
            background: var(--color-card-bg);
            backdrop-filter: blur(10px) saturate(150%);
            -webkit-backdrop-filter: blur(10px) saturate(150%);
            padding: 2rem;
            border-radius: 15px;
            border: 2px solid;
            border-image: linear-gradient(to bottom right, var(--color-gold-gradient-start), var(--color-gold-gradient-end)) 1;
            box-shadow: 0 15px 35px var(--color-shadow-primary);
            animation: card-fade-in 0.8s var(--easing-function) 0.2s forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        .section-title {
            font-family: var(--font-display);
            font-size: 1.5em;
            color: var(--color-earth-brown);
            margin-bottom: 1rem;
            text-align: center;
            position: relative;
        }

        .section-title::after {
            content: '';
            display: block;
            width: 60px;
            height: 2px;
            background: linear-gradient(to right, transparent, var(--color-gold-accent), transparent);
            margin: 0.5rem auto 0;
        }

        .bio-text {
            color: var(--color-text-primary);
            font-size: 1.1em;
            line-height: 1.7;
            text-align: justify;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 10px;
            border-left: 4px solid var(--color-gold-accent);
        }

        /* Stats Section */
        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: var(--color-card-bg);
            backdrop-filter: blur(10px) saturate(150%);
            -webkit-backdrop-filter: blur(10px) saturate(150%);
            padding: 1.5rem;
            border-radius: 12px;
            border: 2px solid;
            border-image: linear-gradient(to bottom right, var (--color-gold-gradient-start), var(--color-gold-gradient-end)) 1;
            box-shadow: 0 10px 25px var(--color-shadow-primary);
            text-align: center;
            animation: card-fade-in 0.8s var(--easing-function) 0.4s forwards;
            opacity: 0;
            transform: translateY(20px);
            transition: all var(--transition-speed-medium) var(--easing-function);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px var(--color-shadow-secondary);
        }

        .stat-number {
            font-family: var(--font-display);
            font-size: 2.5em;
            color: var(--color-earth-brown);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--color-text-secondary);
            font-size: 1.1em;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Actions Section */
        .actions-section {
            background: var(--color-card-bg);
            backdrop-filter: blur(10px) saturate(150%);
            -webkit-backdrop-filter: blur(10px) saturate(150%);
            padding: 2rem;
            border-radius: 15px;
            border: 2px solid;
            border-image: linear-gradient(to bottom right, var(--color-gold-gradient-start), var(--color-gold-gradient-end)) 1;
            box-shadow: 0 15px 35px var(--color-shadow-primary);
            animation: card-fade-in 0.8s var(--easing-function) 0.6s forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .action-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.8rem;
            padding: 1.2rem;
            background: linear-gradient(145deg, var(--color-sandalwood-light), #f5e6d3);
            border: 2px solid transparent;
            border-radius: 10px;
            color: var(--color-earth-brown);
            text-decoration: none;
            font-family: var(--font-primary);
            font-weight: 600;
            font-size: 1.1em;
            transition: all var(--transition-speed-medium) var(--easing-function);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .action-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 100%);
            transition: left var(--transition-speed-slow) var(--easing-function);
        }

        .action-btn:hover::before {
            left: 100%;
        }

        .action-btn:hover {
            transform: translateY(-3px);
            background: linear-gradient(145deg, var(--color-gold-gradient-start), var(--color-gold-gradient-end));
            color: white;
            box-shadow: 0 10px 25px var(--color-shadow-secondary);
        }

        .action-icon {
            font-size: 1.3em;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .header h1 {
                font-size: 2em;
            }

            .dashboard-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .main-container {
                padding: 0 1rem 2rem;
            }

            .profile-card,
            .bio-section,
            .actions-section {
                padding: 1.5rem;
            }

            .stats-section {
                grid-template-columns: 1fr;
            }

            .actions-grid {
                grid-template-columns: 1fr;
            }

            .back-home-btn {
                padding: 10px 16px;
                font-size: 13px;
            }
        }

        @media (max-width: 480px) {
            .header h1 {
                font-size: 1.8em;
            }

            .profile-image {
                width: 120px;
                height: 120px;
            }

            .profile-name {
                font-size: 1.5em;
            }

            .stat-number {
                font-size: 2em;
            }

            .main-container {
                padding: 0 0.5rem 1rem;
            }

            .back-home-btn {
                top: 15px;
                left: 15px;
                padding: 8px 14px;
                font-size: 12px;
            }
        }

        /* Header subtitle animation */
        .header-subtitle {
            animation: fadeInUp 1s ease-out 0.4s forwards;
            opacity: 0;
            transform: translateY(10px);
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Subtle glow on profile name */
        .profile-name {
            text-shadow: 0 0 6px rgba(184, 134, 11, 0.3), 0 0 12px rgba(184, 134, 11, 0.2);
        }

        /* Hover interaction for stat cards */
        .stat-card:hover {
            background: linear-gradient(145deg, #fff1d6, #f8e0c1);
            color: var(--color-text-primary);
            transform: translateY(-8px);
            transition: 0.3s ease-in-out;
            cursor: pointer;
        }
    </style>
</head>

